<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Codem</title>
    <link href="~/HomeImages/logo_img.PNG" rel="icon" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Elearning_Application_Web.styles.css" asp-append-version="true" />
    <link href="~/css/Home/preloader-style.css" rel="stylesheet" />
    @RenderSection("VendorStyles", required: false)
    @RenderSection("PageStyles", required: false)
</head>
<body>
    @if (ViewBag.title == "Home")
    {
        <!-- ? Preloader Start -->
        <div id="preloader-active">
            <div class="preloader d-flex align-items-center justify-content-center">
                <div class="preloader-inner position-relative">
                    <div class="preloader-circle"></div>
                    <div class="preloader-img pere-text">
                        <img width="55" height="55" src="~/HomeImages/logo_img.PNG" alt="">
                    </div>
                </div>
            </div>
        </div>
        
    }
   
     @RenderBody()

    @RenderSection("VendorScripts", required: false)
    @RenderSection("PageScripts", required: false)
    <script src="~/js/Home/preloader.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
